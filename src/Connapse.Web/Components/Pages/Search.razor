@page "/search"
@rendermode InteractiveServer
@attribute [Authorize]
@inject IHttpClientFactory HttpClientFactory
@inject NavigationManager Navigation

<PageTitle>Search - Connapse</PageTitle>

<h1>Search Knowledge Base</h1>
<p class="page-subtitle">Search through your documents using semantic, keyword, or hybrid search</p>

<div class="search-container">
    <div class="search-input-section">
        <div class="row g-3">
            <div class="col-md-6">
                <label class="form-label">Search Query</label>
                <input type="text"
                       class="form-control form-control-lg"
                       placeholder="Enter your search query..."
                       @bind="query"
                       @bind:event="oninput"
                       @onkeypress="HandleKeyPress" />
            </div>
            <div class="col-md-3">
                <label class="form-label">Container</label>
                <select class="form-select" @bind="selectedContainerId">
                    <option value="">All containers</option>
                    @foreach (var c in containers)
                    {
                        <option value="@c.Id">@c.Name</option>
                    }
                </select>
            </div>
            <div class="col-md-3">
                <label class="form-label">Folder Path (optional)</label>
                <input type="text"
                       class="form-control"
                       placeholder="/test/subfolder/"
                       @bind="folderPath"
                       @bind:event="oninput" />
            </div>
        </div>
        <div class="row g-3 mt-1">
            <div class="col-md-2">
                <label class="form-label">Search Mode</label>
                <select class="form-select" @bind="searchMode">
                    <option value="Hybrid">Hybrid</option>
                    <option value="Semantic">Semantic</option>
                    <option value="Keyword">Keyword</option>
                </select>
            </div>
            <div class="col-md-2">
                <label class="form-label">Results</label>
                <select class="form-select" @bind="topK">
                    <option value="5">5</option>
                    <option value="10">10</option>
                    <option value="20">20</option>
                    <option value="50">50</option>
                </select>
            </div>
        </div>

        <div class="mt-3">
            <button class="btn btn-primary btn-lg" @onclick="PerformSearch" disabled="@(isSearching || string.IsNullOrWhiteSpace(selectedContainerId))">
                @if (isSearching)
                {
                    <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                    <span>Searching...</span>
                }
                else
                {
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16" style="margin-right: 0.5rem;">
                        <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001q.044.06.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1 1 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z"/>
                    </svg>
                    <span>Search</span>
                }
            </button>
            @if (string.IsNullOrWhiteSpace(selectedContainerId))
            {
                <span class="text-muted ms-2" style="font-size: 0.85rem;">Select a container to search</span>
            }
        </div>
    </div>

    @if (errorMessage != null)
    {
        <div class="alert alert-danger mt-4" role="alert">
            <strong>Error:</strong> @errorMessage
        </div>
    }

    @if (searchResult != null && !isSearching)
    {
        <div class="search-results mt-4">
            <div class="results-header">
                <h3>Search Results</h3>
                <span class="results-meta">
                    Found @searchResult.TotalMatches results in @searchResult.Duration.TotalMilliseconds.ToString("F0")ms
                </span>
            </div>

            @if (searchResult.Hits.Count == 0)
            {
                <div class="no-results">
                    <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" fill="currentColor" viewBox="0 0 16 16">
                        <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001q.044.06.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1 1 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z"/>
                    </svg>
                    <h4>No results found</h4>
                    <p>Try adjusting your search query or using a different search mode</p>
                </div>
            }
            else
            {
                <div class="results-list">
                    @foreach (var hit in searchResult.Hits)
                    {
                        <div class="result-card">
                            <div class="result-header">
                                <div class="result-score-badge">
                                    <span class="score-label">Score:</span>
                                    <span class="score-value">@hit.Score.ToString("F3")</span>
                                </div>
                                @{
                                    var fileName = hit.Metadata.GetValueOrDefault("fileName")
                                                ?? hit.Metadata.GetValueOrDefault("FileName")
                                                ?? hit.Metadata.GetValueOrDefault("source");
                                }
                                @if (fileName is not null)
                                {
                                    <span class="source-badge">@fileName</span>
                                }
                            </div>

                            <div class="result-content">
                                <div class="result-text">@hit.Content</div>
                            </div>

                            <div class="result-footer">
                                <small class="text-muted">
                                    <strong>Document:</strong> @hit.DocumentId
                                    @{
                                        var chunkIdx = hit.Metadata.GetValueOrDefault("chunkIndex")
                                                    ?? hit.Metadata.GetValueOrDefault("ChunkIndex");
                                    }
                                    @if (chunkIdx is not null)
                                    {
                                        <span> | <strong>Chunk:</strong> @chunkIdx</span>
                                    }
                                </small>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
    }
</div>

@code {
    private string query = "";
    private string searchMode = "Hybrid";
    private int topK = 10;
    private string selectedContainerId = "";
    private string folderPath = "";
    private bool isSearching = false;
    private SearchResult? searchResult;
    private string? errorMessage;
    private List<ContainerDto> containers = new();

    private HttpClient? _httpClient;
    private HttpClient Http
    {
        get
        {
            if (_httpClient == null)
            {
                _httpClient = HttpClientFactory.CreateClient("BlazorClient");
                _httpClient.BaseAddress = new Uri(Navigation.BaseUri);
            }
            return _httpClient;
        }
    }

    protected override async Task OnInitializedAsync()
    {
        await LoadContainers();
    }

    private async Task LoadContainers()
    {
        try
        {
            var result = await Http.GetFromJsonAsync<List<ContainerDto>>("/api/containers");
            containers = result ?? new();

            // Auto-select the first container if there's only one
            if (containers.Count == 1)
                selectedContainerId = containers[0].Id;
        }
        catch { /* Silently ignore - user can still type */ }
    }

    private async Task HandleKeyPress(KeyboardEventArgs e)
    {
        if (e.Key == "Enter" && !isSearching && !string.IsNullOrWhiteSpace(selectedContainerId))
        {
            await PerformSearch();
        }
    }

    private async Task PerformSearch()
    {
        if (string.IsNullOrWhiteSpace(query))
        {
            errorMessage = "Please enter a search query";
            return;
        }

        if (string.IsNullOrWhiteSpace(selectedContainerId))
        {
            errorMessage = "Please select a container";
            return;
        }

        isSearching = true;
        errorMessage = null;
        searchResult = null;
        StateHasChanged();

        try
        {
            var url = $"/api/containers/{selectedContainerId}/search?q={Uri.EscapeDataString(query)}&mode={searchMode}&topK={topK}";

            // Add folder path filter if specified
            if (!string.IsNullOrWhiteSpace(folderPath))
            {
                var normalizedPath = folderPath.Trim();
                if (!normalizedPath.StartsWith('/'))
                    normalizedPath = "/" + normalizedPath;
                if (!normalizedPath.EndsWith('/'))
                    normalizedPath += "/";
                url += $"&path={Uri.EscapeDataString(normalizedPath)}";
            }

            var response = await Http.GetAsync(url);
            response.EnsureSuccessStatusCode();

            searchResult = await response.Content.ReadFromJsonAsync<SearchResult>();
        }
        catch (Exception ex)
        {
            errorMessage = ex.Message;
        }
        finally
        {
            isSearching = false;
            StateHasChanged();
        }
    }

    private record ContainerDto(string Id, string Name, string? Description, DateTime CreatedAt, DateTime UpdatedAt, int DocumentCount);
    private record SearchResult(List<SearchHit> Hits, int TotalMatches, TimeSpan Duration);
    private record SearchHit(string ChunkId, string DocumentId, string Content, float Score, Dictionary<string, string> Metadata);
}
