@using Connapse.Core
@using System.Net.Http.Json

<EditForm Model="@localSettings" OnValidSubmit="HandleSubmit">
    <DataAnnotationsValidator />

    <div class="row g-3">
        <div class="col-md-6">
            <label class="form-label">Vector Store Provider</label>
            <InputSelect @bind-Value="localSettings.VectorStoreProvider" class="form-select">
                <option value="SqliteVec">SQLite-vec</option>
                <option value="PgVector">PgVector (PostgreSQL)</option>
                <option value="Qdrant">Qdrant</option>
                <option value="Pinecone">Pinecone</option>
                <option value="AzureAISearch">Azure AI Search</option>
            </InputSelect>
        </div>

        <div class="col-md-6">
            <label class="form-label">Document Store Provider</label>
            <InputSelect @bind-Value="localSettings.DocumentStoreProvider" class="form-select">
                <option value="Postgres">PostgreSQL</option>
                <option value="MongoDB">MongoDB</option>
            </InputSelect>
        </div>

        <div class="col-md-6">
            <label class="form-label">File Storage Provider</label>
            <InputSelect @bind-Value="localSettings.FileStorageProvider" class="form-select">
                <option value="Local">Local File System</option>
                <option value="MinIO">MinIO (S3-compatible)</option>
                <option value="AzureBlob">Azure Blob Storage</option>
                <option value="S3">Amazon S3</option>
            </InputSelect>
        </div>

        <div class="col-12">
            <h5 class="mt-4 mb-3">MinIO / S3 Configuration</h5>
        </div>

        <div class="col-md-6">
            <label class="form-label">Endpoint</label>
            <InputText @bind-Value="localSettings.MinioEndpoint" class="form-control" placeholder="localhost:9000" />
        </div>

        <div class="col-md-6">
            <label class="form-label">Bucket Name</label>
            <InputText @bind-Value="localSettings.MinioBucketName" class="form-control" placeholder="aikp-files" />
        </div>

        <div class="col-md-6">
            <label class="form-label">Access Key</label>
            <InputText @bind-Value="localSettings.MinioAccessKey" class="form-control" />
        </div>

        <div class="col-md-6">
            <label class="form-label">Secret Key</label>
            <InputText @bind-Value="localSettings.MinioSecretKey" type="password" class="form-control" />
        </div>

        <div class="col-md-6">
            <div class="form-check mt-4">
                <InputCheckbox @bind-Value="localSettings.MinioUseSSL" class="form-check-input" id="useSSL" />
                <label class="form-check-label" for="useSSL">
                    Use SSL/TLS
                </label>
            </div>
        </div>

        <div class="col-12">
            <h5 class="mt-4 mb-3">Local Storage Configuration</h5>
        </div>

        <div class="col-md-6">
            <label class="form-label">Local Storage Root Path</label>
            <InputText @bind-Value="localSettings.LocalStorageRootPath" class="form-control" placeholder="knowledge-data" />
        </div>

        <div class="col-12">
            <h5 class="mt-4 mb-3">Azure Blob Storage Configuration</h5>
        </div>

        <div class="col-md-6">
            <label class="form-label">Connection String</label>
            <InputText @bind-Value="localSettings.AzureBlobConnectionString" type="password" class="form-control" />
        </div>

        <div class="col-md-6">
            <label class="form-label">Container Name</label>
            <InputText @bind-Value="localSettings.AzureBlobContainerName" class="form-control" />
        </div>

        <div class="col-12 mt-4">
            <button type="submit" class="btn btn-primary me-2">
                <span class="bi-save me-1"></span> Save Changes
            </button>
            <button type="button" class="btn btn-secondary me-2" @onclick="Reset">
                <span class="bi-arrow-counterclockwise me-1"></span> Reset
            </button>
            <button type="button" class="btn btn-info" @onclick="TestConnection" disabled="@isTestingConnection">
                @if (isTestingConnection)
                {
                    <span class="spinner-border spinner-border-sm me-1" role="status" aria-hidden="true"></span>
                    <span>Testing...</span>
                }
                else
                {
                    <span class="bi-plug me-1"></span>
                    <span>Test Connection</span>
                }
            </button>
        </div>

        @if (!string.IsNullOrEmpty(testMessage))
        {
            <div class="col-12 mt-3">
                <div class="alert @(testSuccess ? "alert-success" : "alert-danger") alert-dismissible fade show" role="alert">
                    <span class="@(testSuccess ? "bi-check-circle" : "bi-x-circle") me-2"></span>
                    @testMessage
                    <button type="button" class="btn-close" @onclick="@(() => testMessage = null)"></button>
                </div>
            </div>
        }
    </div>
</EditForm>

@inject IHttpClientFactory HttpClientFactory
@inject NavigationManager Navigation

@code {
    private HttpClient? _httpClient;
    private HttpClient Http
    {
        get
        {
            if (_httpClient == null)
            {
                _httpClient = HttpClientFactory.CreateClient("BlazorClient");
                _httpClient.BaseAddress = new Uri(Navigation.BaseUri);
            }
            return _httpClient;
        }
    }

    [Parameter]
    public StorageSettings Settings { get; set; } = new();

    [Parameter]
    public EventCallback<StorageSettings> OnSave { get; set; }

    private StorageSettings localSettings = new();
    private bool isTestingConnection;
    private string? testMessage;
    private bool testSuccess;

    protected override void OnParametersSet()
    {
        localSettings = Settings with { };
    }

    private async Task HandleSubmit()
    {
        await OnSave.InvokeAsync(localSettings);
    }

    private void Reset()
    {
        localSettings = Settings with { };
    }

    private async Task TestConnection()
    {
        isTestingConnection = true;
        testMessage = null;
        StateHasChanged();

        try
        {
            var request = new
            {
                Category = "storage",
                Settings = localSettings,
                TimeoutSeconds = 10
            };

            var response = await Http.PostAsJsonAsync("/api/settings/test-connection", request);
            var result = await response.Content.ReadFromJsonAsync<ConnectionTestResult>();

            if (result != null)
            {
                testSuccess = result.Success;
                testMessage = result.Message;
            }
            else
            {
                testSuccess = false;
                testMessage = "No response from server";
            }
        }
        catch (Exception ex)
        {
            testSuccess = false;
            testMessage = $"Test failed: {ex.Message}";
        }
        finally
        {
            isTestingConnection = false;
            StateHasChanged();
        }
    }
}
