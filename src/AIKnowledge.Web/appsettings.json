{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Database=aikp;Username=aikp;Password=aikp_dev"
  },
  "Knowledge": {
    "Chunking": {
      "Strategy": "Semantic",
      "MaxChunkSize": 512,
      "Overlap": 50
    },
    "Embedding": {
      "Provider": "Ollama",
      "Model": "nomic-embed-text",
      "Dimensions": 768,
      "BaseUrl": "http://localhost:11434"
    },
    "VectorStore": {
      "Provider": "PgVector"
    },
    "LLM": {
      "Provider": "Ollama",
      "Model": "llama3.2:3b"
    },
    "WebSearch": {
      "Provider": "None"
    },
    "FileSystem": {
      "RootPath": "knowledge-data"
    },
    "Storage": {
      "UploadPath": "uploads",
      "MaxFileSizeMb": 100,
      "MinIO": {
        "Endpoint": "localhost:9000",
        "AccessKey": "aikp_dev",
        "SecretKey": "aikp_dev_secret",
        "UseSSL": false,
        "BucketName": "aikp-files"
      }
    }
  }
}
