{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Knowledge": {
    "Chunking": {
      "Strategy": "Semantic",
      "MaxChunkSize": 512,
      "Overlap": 50
    },
    "Embedding": {
      "Provider": "Ollama",
      "Model": "nomic-embed-text",
      "Dimensions": 768
    },
    "VectorStore": {
      "Provider": "SqliteVec",
      "ConnectionString": "Data Source=knowledge.db"
    },
    "LLM": {
      "Provider": "Ollama",
      "Model": "llama3.2"
    },
    "WebSearch": {
      "Provider": "None"
    },
    "FileSystem": {
      "RootPath": "knowledge-data"
    },
    "Storage": {
      "UploadPath": "uploads",
      "MaxFileSizeMb": 100
    }
  }
}
